<div class="new-form">
  <div class="container mt-5">
    <h1 class="mb-5 text-center"> We are curious about your experience</h1>
    <div class="new-form" id="surrounding">
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%=f.submit "Send", class: "btn-dark" %>

      <% end %>
    </div>
  </div>
</div>
