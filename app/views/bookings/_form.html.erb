<div class="container">
  <%= render 'shared/progressbar' %>
  <h2 class="text-center mb-4">Select your <br> preferred date</h2>
  <%= simple_form_for [@property, @booking] do |f| %>
    <%= f.input :date, as: :string, label: false, required: false, input_html: {class: "datepicker"} %>
    <%= render 'shared/form-next', f: f %>
  <% end %>
</div>
