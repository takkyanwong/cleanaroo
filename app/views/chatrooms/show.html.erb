<!-- cleaner role = 1 -->
<% if current_user.role == "cleaner" %>
  <%= @chatroom.booking.property.user.name  %>
<% else current_user.role == "owner" %>
  <%= @chatroom.booking.user.name  %>
<% end %>


<h1>chatroom</h1>
<%= @chatroom.booking.date %>
<%= @chatroom.booking.property.address %>


<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message #" %>
  <%= f.submit %>
<% end %>
